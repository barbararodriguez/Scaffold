<div class="container">
    <div class="page-header">
      <h1>Mostrando Grupos</h1>
    </div>

<table class="table table-hover">

    <thead>
        <tr>
            <th>Nombre</th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    
    <% @groups.each do |group| %>
        <tr>
            <td><%= group.name %></td>
            <td><%= link_to 'Mostrar', group_path(group), :class => "btn btn-info btn-xs" %></td>
            <td><%= link_to 'Editar', edit_group_path(group), :class => "btn btn-warning btn-xs" %></td>
            <td><%= link_to 'Eliminar', group_path(group),
                    method: :delete, data: { confirm: '¿Estas seguro?' }, :class => "btn btn-danger btn-xs" %></td>
        </tr>
    <% end %>
    
</table>

<%= link_to 'Nuevo Grupo', new_group_path, :class => "btn btn-success" %>  <%= link_to 'Página principal', welcome_index_path, :class => "btn btn-primary" %>
    
</div>
    
</div>
