<%= form_for([@group, @group.students.build]) do |f| %>
  <div class="form-group">
    <%= f.label "Nombre" %><br>
    <%= f.text_field :name, :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :"Edad" %><br>
    <%= f.number_field :age, :class => "form-control" %>
  </div>
  <p>
    <%= f.submit "Crear", :class => "btn btn-success" %>
  </p>
<% end %>