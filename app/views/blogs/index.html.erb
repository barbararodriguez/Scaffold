<div class="container">
    <div class="page-header">
      <h1>Mostrando Blogs</h1>
    </div>

    <table class="table table-hover">

        <thead>
            <tr>
                <th>Título</th>
                <th>Texto</th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
        </thead>

        <% @blogs.each do |blog| %>
            <tr>
                <td><%= blog.title %></td>
                <td><%= blog.text %></td>
                <td><%= link_to 'Mostrar', blog_path(blog), :class => "btn btn-info btn-xs" %></td>
                <td><%= link_to 'Editar', edit_blog_path(blog), :class => "btn btn-warning btn-xs" %></td>
                <td><%= link_to 'Eliminar', blog_path(blog),
                        method: :delete, data: { confirm: '¿Estas seguro?' }, :class => "btn btn-danger btn-xs" %></td>
            </tr>
        <% end %>

    </table>

    <%= link_to 'Nuevo Blog', new_blog_path, :class => "btn btn-success" %>  <%= link_to 'Página principal', welcome_index_path, :class => "btn btn-primary" %>
    
</div>
